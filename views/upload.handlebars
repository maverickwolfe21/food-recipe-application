<div class="col-md-6">
  <h3>Upload a Recipe!</h3>

  <form class="form new-recipe-form">
    <div class="form-group">
      <label for="recipe-name">Recipe Name:</label>
      <input class="form-input" type="text" id="recipe-name" name="recipe-name" />
    </div>
    <div class="form-group">
      <label for="recipe-instructions">Instructions:</label>
      <input class="form-input" type="text" id="recipe-instructions" name="recipe-instructions" />
    </div>
    <div class="form-group">
      <label for="recipe-image">Image:</label>
      <input type="file" id="img" name="img" accept="image/*" />
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>
  </form>
</div>

<script src="./js/upload.js"></script>