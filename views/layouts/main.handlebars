<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/jass.css" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <title>Recipes</title>
    <div class="flex-column justify-space-around">
      <header class="display-flex justify-center align-center p-2">
        <h1>
          <a class="main-recipes-text" href="/">Recipes</a>
        </h1>
        
        <nav>
          <!-- Conditionally render login or logout links -->
          {{#if logged_in}}
            <a href="/upload">upload</a>
            <button class="no-button" id="logout">logout</button>
          {{else}}
          <a style="position: absolute; right:0; padding: 10px;" href="/login">login</a>
          {{/if}}
        </nav>
      </header>
      <main class="container container-fluid mt-5">
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>