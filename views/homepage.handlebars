<main class="container" style="margin-bottom: 15px">

  <h1 class="mb-4 text-white">Recipes</h1>
  <div class="row">
    <div class="row row-cols-2 row-cols-md-2 g-4">
      <div class="col m-2"></div>
      {{#each recipe}}

      <div class="{{image}}">
        <img src="..." class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title">
            <a href="/recipe/{{id}}" class="text-black">{{title}}</a>
          </h5>
          <p class="card-text">
          <div class="card-body text-black">
            <p>Created by: {{user.username}} Date: {{formatedDate}}</p>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
</main>